{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,
    "baseUrl": ".",
    "paths": {
      "@configs": [
        "./src/configs"
      ],
      "@configs/*": [
        "./src/configs/*"
      ],
      "@errors": [
        "./src/errors"
      ],
      "@errors/*": [
        "./src/errors/*"
      ],
      "@middlewares": [
        "./src/middlewares"
      ],
      "@middlewares/*": [
        "./src/middlewares/*"
      ],
      "@tasks": [
        "./src/tasks"
      ],
      "@tasks/*": [
        "./src/tasks/*"
      ],
      "@libs": [
        "./src/libs"
      ],
      "@libs/*": [
        "./src/libs/*"
      ],
      "@types": [
        "./src/types"
      ],
      "@types/*": [
        "./src/types/*"
      ],
      "@contexts": [
        "./src/contexts"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ],
      "@services": [
        "./src/services"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@controllers": [
        "./src/controllers"
      ],
      "@controllers/*": [
        "./src/controllers/*"
      ],
      "@db": [
        "./src/db"
      ],
      "@db/*": [
        "./src/db/*"
      ],
      "@adapters": [
        "./src/adapters"
      ],
      "@adapters/*": [
        "./src/adapters/*"
      ],
      "@ports": [
        "./src/ports"
      ],
      "@ports/*": [
        "./src/ports/*"
      ],
      "@routes": [
        "./src/routes"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
      "@domains": [
        "./src/domains"
      ],
      "@domains/*": [
        "./src/domains/*"
      ],
      "@schemas": [
        "./src/schemas"
      ],
      "@schemas/*": [
        "./src/schemas/*"
      ],
    }
  }
}
